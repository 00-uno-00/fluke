{
    "name": "fl_bench.algorithms.fedprox.FedProx",
    "hyperparameters": {
        "server": {
            "weighted": true
        },
        "client": {
            "batch_size": 10,
            "local_epochs": 10,
            "loss": "CrossEntropyLoss",
            "mu": 0.3,
            "optimizer": {
                "lr": 0.01,
                "weight_decay": 0.0001,
                "momentum": 0.9
            },
            "scheduler": {
                "step_size": 1, 
                "gamma": 1
            }
        },
        "model": "MNIST_2NN"
    }
}