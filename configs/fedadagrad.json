{
    "name": "fedopt",
    "hyperparameters": {
        "server": {
            "mode": "adagrad",
            "lr": 0.01,
            "beta1": 0.9,
            "beta2": 0.999,
            "tau": 0.001
        },
        "client": {
            "batch_size": 10,
            "local_epochs": 10,
            "loss": "CrossEntropyLoss",
            "optimizer": {		
                "lr": 0.01,
                "scheduler_kwargs": {
                    "step_size": 10, 
                    "gamma": 0.995
                }
            }
        },
        "model": "MLP"
    }
}