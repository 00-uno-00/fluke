{
    "name": "fedavg",
    "hyperparameters": {
        "server": {
            "weighted": true        
        },
        "client": {
            "batch_size": 80,
            "local_epochs": 10,
            "loss": "CrossEntropyLoss",
            "optimizer": {		
                "lr": 0.01,
                "weight_decay": 0.00001,
                "momentum": 0.9,
                "scheduler_kwargs": {
                    "step_size": 1, 
                    "gamma": 1
                }
            }
        },
        "model": "ResNet50"
    }
}